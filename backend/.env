# Ambiente
NODE_ENV=development

# Servidor
PORT=8080
FRONTEND_URL=http://localhost:5173

# Banco de Dados
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
DB_NAME=firewatch

# APIs Externas - IMPORTANTE: Substitua por suas próprias chaves
FIRMS_API_KEY=YOUR_FIRMS_API_KEY_HERE
GOOGLE_MAPS_KEY=YOUR_GOOGLE_MAPS_KEY_HERE
OPENWEATHER_API_KEY=YOUR_OPENWEATHER_API_KEY_HERE

# Configurações
FETCH_INTERVAL_MINUTES=15
LOG_LEVEL=info

# Cache Redis (opcional para escalabilidade)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Secret (para autenticação futura)
JWT_SECRET=GENERATE_A_STRONG_SECRET_HERE
JWT_EXPIRES_IN=7d

# Configurações de Email (opcional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
